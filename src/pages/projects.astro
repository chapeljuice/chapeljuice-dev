---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer';
import ProjectCard from '../components/ProjectCard';
import ProjectFilter from '../components/ProjectFilter';
import projectsData from '../data/projects.json';
import SectionDivider from '../components/SectionDivider';

const projects = projectsData;
---

<Layout 
  title="Projects - Ryan Chapel | Web Development Portfolio | LPGA, PaperNFTs, RedAwning"
  description="Explore Ryan Chapel's web development portfolio featuring LPGA.com, PaperNFTs, RedAwning app, and custom solutions for small businesses."
  image="/images/project-screens/hero-lpga.webp"
  tags={["projects", "portfolio", "web development", "LPGA", "PaperNFTs", "React", "TypeScript"]}
>
  <Navigation currentPath={Astro.url.pathname} />
  
  <main>
    <!-- Header Section -->
    <section class="bg-[#e0e7ff] py-12 md:py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 silkscreen-regular">
            My Projects 🧑🏼‍💻
          </h1>
          <p class="text-xl text-gray-700 mb-8 max-w-3xl mx-auto">
            Showcasing a few of my favorite websites & apps that I've spearheaded that demonstrate my expertise in building cutting-edge web solutions.
          </p>
        </div>
      </div>
    </section>

    <SectionDivider bottomColor="#fff" topColor="#e0e7ff" />

    <!-- Projects Grid -->
    <section class="py-12 md:py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ProjectFilter client:load projects={projects} />
      </div>
    </section>
  </main>

  <SectionDivider bottomColor="#1e2939" topColor="#fff" />

  <Footer />
</Layout>
